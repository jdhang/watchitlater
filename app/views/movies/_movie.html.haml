.movie-row{ :data => { :movie => (movie.id).to_s } }
  .movie-checkbox.text-center
    =link_to (movie.watched ? unwatch_movie_path(movie) : watched_movie_path(movie)), method: "post", remote: true do
      %input{type: "checkbox", checked: (movie.watched ? "checked" : nil) }
  .movie-title
    -if movie.watched
      =movie.title
    -else
      =link_to movie.title, edit_movie_path(movie), remote: true
  .movie-delete
    =link_to movie_path(movie), method: "delete", remote: true, data: { confirm:  "Are you sure you want to delete this movie?" }  do
      %i.fa.fa-times.pull-right
